<Window x:Class="WpfAppGUIMySteam.Lab1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление коллекцией"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#0f3460">

    <Grid>
        <!-- Фон -->
        <Image Source="/Images/yakuza-0-goro-majima-kiryu-kazuma.jpg" 
               Stretch="UniformToFill" Opacity="0.3"/>

        <DockPanel>
            <!-- Заголовок -->
            <Border DockPanel.Dock="Top" 
                    Background="#1a1a2e" 
                    Padding="15" 
                    BorderThickness="0,0,0,2" 
                    BorderBrush="#e94560">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="Назад" 
                            Style="{StaticResource AnimeButton}"
                            Command="{Binding BackCommand}"
                            Background="#16213e"
                            Grid.Column="0"/>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="アニメ図書館" 
                                   Foreground="White" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Управление коллекцией" 
                                   Foreground="#f8c3af" 
                                   FontSize="12"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="Всего аниме: " Foreground="White" FontSize="14"/>
                        <TextBlock Text="{Binding TotalAnimeCount}" Foreground="#e94560" FontSize="14" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Основной контент -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Левая колонка - операции -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">

                        <!-- Операция 1: Добавить аниме -->
                        <Border Style="{StaticResource AnimeCard}" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="📥 Добавить произведение в библиотеку" 
                                           Foreground="#e94560" 
                                           FontWeight="Bold" 
                                           FontSize="14"
                                           Margin="0,0,0,10"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- ТИП (аниме/манга) -->
                                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,5,0">
                                        <TextBlock Text="Тип" Foreground="#cccccc" FontSize="14"/>
                                        <ComboBox Style="{StaticResource AnimeComboBox}"
                                                  ItemContainerStyle="{StaticResource AnimeComboBoxItem}"
                                                  ItemsSource="{Binding Types}"
                                                  SelectedItem="{Binding SelectedType}"/>
                                    </StackPanel>

                                    <!-- НАЗВАНИЕ -->
                                    <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,5,0">
                                        <TextBlock Text="Название" Foreground="#cccccc" FontSize="14"/>
                                        <TextBox Style="{StaticResource AnimeTextBox}"
                                                 Text="{Binding NewAnimeTitle}"/>
                                    </StackPanel>

                                    <!-- ЖАНР (Драма/Комедия) -->
                                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="5,0,0,0">
                                        <TextBlock Text="Жанр" Foreground="#cccccc" FontSize="14"/>
                                        <ComboBox Style="{StaticResource AnimeComboBox}"
                                                  ItemContainerStyle="{StaticResource AnimeComboBoxItem}"
                                                  ItemsSource="{Binding Tags}"
                                                  SelectedItem="{Binding SelectedGenre}"/>
                                    </StackPanel>

                                    <!-- ГОД -->
                                    <StackPanel Grid.Column="1" Grid.Row="1" Margin="5,0,0,0">
                                        <TextBlock Text="Год выхода" Foreground="#cccccc" FontSize="14"/>
                                        <TextBox Style="{StaticResource AnimeTextBox}"
                                                 Text="{Binding NewAnimeYear}"/>
                                    </StackPanel>

                                    <!-- РЕЙТИНГ -->
                                    <StackPanel Grid.Column="1" Grid.Row="2" Margin="5,0,0,0">
                                        <TextBlock Text="Рейтинг (0-10)" Foreground="#cccccc" FontSize="14"/>
                                        <TextBox Style="{StaticResource AnimeTextBox}"
                                                 Text="{Binding NewAnimeRating}"/>
                                    </StackPanel>

                                    <!-- СЕРИИ -->
                                    <StackPanel Grid.Column="0" Grid.Row="2" Margin="0,0,5,0">
                                        <TextBlock Text="Количество серий/глав" Foreground="#cccccc" FontSize="14"/>
                                        <TextBox Style="{StaticResource AnimeTextBox}"
                                                Text="{Binding NumberOfEpisodes}"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Кнопки -->
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Добавить" 
                                            Style="{StaticResource AnimeButton}"
                                            Command="{Binding AddAnimeCommand}"
                                            Margin="0,0,5,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Операция 2: Поиск по жанру и рейтингу -->
                        <Border Style="{StaticResource AnimeCard}" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="🔍 Поиск по названию" 
                                           Foreground="#e94560" 
                                           FontWeight="Bold" 
                                           FontSize="14"
                                           Margin="0,0,0,10"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                        <TextBlock Text="Название:" Foreground="#cccccc" FontSize="14"/>
                                        <TextBox Style="{StaticResource AnimeTextBox}"
                                                 Text="{Binding Title}"/>
                                    </StackPanel>
                                </Grid>

                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Найти" 
                                            Style="{StaticResource AnimeButton}"
                                            Command="{Binding SearchAnimeCommand}"
                                            Margin="0,0,5,0"/>
                                </StackPanel>

                                <!-- Результаты поиска в DataGrid -->
                                <TextBlock Text="Результаты поиска:" 
                                           Foreground="#cccccc" 
                                           FontSize="14" 
                                           Margin="0,10,0,5"/>
                                <DataGrid ItemsSource="{Binding SearchResults}" 
                                         Style="{StaticResource AnimeDataGrid}"
                                         Height="150"
                                         ColumnHeaderStyle="{StaticResource DataGridColumnHeader}"
                                         CellStyle="{StaticResource DataGridCell}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Тип" Binding="{Binding Work.TypeName}" Width="90"/>
                                        <DataGridTextColumn Header="Название" Binding="{Binding Work.Title}" Width="220"/>
                                        <DataGridTextColumn Header="Жанр" Binding="{Binding TagNames}" Width="150"/>
                                        <DataGridTextColumn Header="Год" Binding="{Binding Work.Year}" Width="70"/>
                                        <DataGridTextColumn Header="Рейтинг" Binding="{Binding Work.Rating}" Width="70"/>
                                        <DataGridTextColumn Header="Серии" Binding="{Binding Work.Series}" Width="100"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>
                        <!-- Справка-контракт -->
                        <Border Style="{StaticResource AnimeCard}" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="📋 Справка-контракт" 
                                           Foreground="#e94560" 
                                           FontWeight="Bold" 
                                           FontSize="14"
                                           Margin="0,0,0,10"/>

                                                        <ComboBox Style="{StaticResource AnimeComboBox}"
                                          ItemContainerStyle="{StaticResource AnimeComboBoxItem}"
                                          ItemsSource="{Binding ContractOperations}"
                                          SelectedItem="{Binding SelectedContractOperation}"
                                          Margin="0,0,0,10"/>

                                <Border Background="#1a1a2e" Padding="10" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding ContractTitle}" 
                                                   Foreground="#e94560" 
                                                   FontWeight="Bold" 
                                                   FontSize="12"
                                                   Margin="0,0,0,5"/>

                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock Text="Pre: " Foreground="#cccccc" FontWeight="Bold" FontSize="11"/>
                                            <TextBlock Text="{Binding PreCondition}" Foreground="#90ee90" FontSize="11" TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock Text="Post: " Foreground="#cccccc" FontWeight="Bold" FontSize="11"/>
                                            <TextBlock Text="{Binding PostCondition}" Foreground="#87ceeb" FontSize="11" TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock Text="Эффекты: " Foreground="#cccccc" FontWeight="Bold" FontSize="11"/>
                                            <TextBlock Text="{Binding Effects}" Foreground="#f8c3af" FontSize="11" TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="Инвариант: " Foreground="#cccccc" FontWeight="Bold" FontSize="11"/>
                                            <TextBlock Text="{Binding Invariant}" Foreground="#dda0dd" FontSize="11" TextWrapping="Wrap"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="Вариант: " Foreground="#cccccc" FontWeight="Bold" FontSize="11"/>
                                            <TextBlock Text="{Binding Variant}" Foreground="#ffb6c1" FontSize="11" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- Граничные примеры -->
                                <TextBlock Text="Граничные примеры:" 
                                           Foreground="#cccccc" 
                                           FontSize="12" 
                                           FontWeight="Bold"
                                           Margin="0,10,0,5"/>

                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#2d5a2d" Padding="8" CornerRadius="3" Margin="0,0,5,0">
                                        <TextBlock Text="✓ Валидный" 
                                                   Foreground="#90ee90" 
                                                   FontSize="10" 
                                                   TextWrapping="Wrap"
                                                   MaxWidth="150"/>
                                    </Border>
                                    <Border Background="#5a2d2d" Padding="8" CornerRadius="3">
                                        <TextBlock Text="✗ Невалидный" 
                                                   Foreground="#ff6b6b" 
                                                   FontSize="10" 
                                                   TextWrapping="Wrap"
                                                   MaxWidth="150"/>
                                    </Border>
                                </StackPanel>

                                <TextBlock Text="{Binding ValidExample}" 
                                           Foreground="#90ee90" 
                                           FontSize="10" 
                                           TextWrapping="Wrap"
                                           Margin="0,5,0,0"/>

                                <TextBlock Text="{Binding InvalidExample}" 
                                           Foreground="#ff6b6b" 
                                           FontSize="10" 
                                           TextWrapping="Wrap"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>

                    <!-- Правая колонка - операции и коллекция -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">

                        <!-- Вся коллекция аниме -->
                        <Border Style="{StaticResource AnimeCard}" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="📚 Вся коллекция" 
                                           Foreground="#e94560" 
                                           FontWeight="Bold" 
                                           FontSize="14"
                                           Margin="0,0,0,10"/>

                                <TextBlock Text="{Binding CollectionStatus}" 
                                           Foreground="#cccccc" 
                                           FontSize="14"
                                           Margin="0,0,0,5"/>

                                <!-- Коллекция аниме в DataGrid -->
                                <DataGrid ItemsSource="{Binding AllAnime}" 
                                         Style="{StaticResource AnimeDataGrid}"
                                         Height="507"
                                         ColumnHeaderStyle="{StaticResource DataGridColumnHeader}"
                                         CellStyle="{StaticResource DataGridCell}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Тип" Binding="{Binding Work.TypeName}" Width="90"/>
                                        <DataGridTextColumn Header="Название" Binding="{Binding Work.Title}" Width="220"/>
                                        <DataGridTextColumn Header="Жанр" Binding="{Binding TagNames}" Width="150"/>
                                        <DataGridTextColumn Header="Год" Binding="{Binding Work.Year}" Width="70"/>
                                        <DataGridTextColumn Header="Рейтинг" Binding="{Binding Work.Rating}" Width="70"/>
                                        <DataGridTextColumn Header="Серии" Binding="{Binding Work.Series}" Width="90"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>